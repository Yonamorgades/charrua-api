{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "charrua burguers API",
      "description": "API to admin charrua burguers site content"
    },
    "host": "localhost:3000",
    "basePath": "/",
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "paths": {
      "/product": {
        "post": {
          "tags": [
            "Products"
          ],
          "summary": "Create a new product in system",
          "parameters": [
            { 
              "name" : "Authorization",
              "in" : "header",
              "description" : "Bearer JWT",
              "required": true 
            }
            ,
            {
              "name": "Product",
              "in": "body",
              "description": "product that we want to create",
              "schema": {
                "$ref": "#/definitions/Product"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/definitions/Product"
              }
            },
            "401":{
              "description": "Access token is missing or invalid"
            }
          }
        },
        "get": {
          "tags": [
            "Products"
          ],
          "summary": "Get all Products in system",
          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/definitions/Product"
              }
            }
          }
        }
      },
      "/product/{id}": {
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of product that we want to find",
            "type": "integer"
          },
          { 
            "name" : "Authorization",
            "in" : "header",
            "description" : "Bearer JWT",
            "required": true 
          }
        ],
        "delete": {
          "summary": "Delete product with given ID",
          "tags": [
            "Products"
          ],
          "responses": {
            "200": {
              "description": "Product is deleted",
              "schema": {
                "$ref": "#/definitions/Product"
              }
            },
            "401":{
              "description": "Access token is missing or invalid"
            }
          }
        },
        "put": {
          "summary": "Update product with give ID",
          "tags": [
            "Products"
          ],
          "parameters": [
            {
              "name": "product",
              "in": "body",
              "description": "Product with new values of properties",
              "schema": {
                "$ref": "#/definitions/Product"
              }
            },
            { 
              "name" : "Authorization",
              "in" : "header",
              "description" : "Bearer JWT",
              "required": true 
            }
          ],
          "responses": {
            "200": {
              "description": "Product is updated",
              "schema": {
                "$ref": "#/definitions/Product"
              }
            },
            "401":{
              "description": "Access token is missing or invalid"
            }
          }
        }
      },
      "/signin":{
        "post":{
          "tags": [
            "Users"
          ],
          "summary": "Get and generate a JSON WEB TOKEN",
          "parameters" : [
            { 
              "name" : "email",
              "in" : "body",
              "description" : "User email to generate a session token",
              "required": true 
            },
            { 
              "name" : "password",
              "in" : "body",
              "description" : "User password to generate a session token",
              "required": true 
            }
          ],
          "responses": {
            "200": {
              "description": "JWT"
            },
            "401":{
              "description": "The mail or the password are incorrect"
            }
          }
        }
      },
      "/signup":{
        "post":{
          "tags": [
            "Users"
          ],
          "summary": "Add a new user",
          "parameters" : [
            { 
              "name" : "email",
              "in" : "body",
              "description" : "User email",
              "required": true 
            },
            { 
              "name" : "password",
              "in" : "body",
              "description" : "User password",
              "required": true 
            },{ 
              "name" : "Authorization",
              "in" : "header",
              "description" : "Bearer JWT",
              "required": true 
            }
          ],
          "responses": {
            "200": {
              "description": "User created successfully"
            },
            "401":{
              "description": "Register error"
            }
          }
        }
      }
    },
    "definitions": {
      "Product": {
        "required": [
          "name",
          "description",
          "ingredients",
          "price",
          "category"
        ],
        "properties": {
          "name": {
           "type": "string"
          },
          "ingredients": {
            "type": "array",
            "items": {
                "type": "string"      
            }
          },
          "description" : {
            "type" : "string"
          },
          "price" : {
            "type" : "integer"
          },
          "category" : {
            "type" : "string"
          }
        }
      },
      "Users" : {
        "required" : [
          "email",
          "password"
        ],
        "properties":{
          "email" : {
            "type" : "string"
          },
          "password" : {
            "type" : "string"
          }
        }
        
      }
    }
  }
